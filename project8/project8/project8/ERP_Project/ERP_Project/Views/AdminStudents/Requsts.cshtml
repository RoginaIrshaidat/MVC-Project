@model IEnumerable<ERP_Project.Models.Student>

@{
    ViewBag.Title = "Requests";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>

    .i {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }

        .i:hover {
            transform: scale(2);
        }

    .n {
        display: none;
    }
</style>
@{
    if (ViewBag.result != null)
    {
        <style>
            #uu {
                display: none;
            }

            .n {
                display: block;
            }
        </style>
    }
}
<br />
<h1 style="text-align:center">Requests</h1>
<br />
<br />
<h3 class="n" style="text-align:center"> No Requsts Right Now! </h3>
<br />
<div class="form-actions no-color d-flex justify-content-center gap-5">

    @Html.ActionLink("Show Accepted Students", "AcceptedStudents", "AdminStudents", null, new { @class = "btn btn-success n w-25 " })

    @Html.ActionLink("Show Rejected Students", "RejectedStudents", "AdminStudents", null, new { @class = "btn btn-danger n w-25" })

</div>
<table class="table table-striped table-hover " id="uu">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchoolAvg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertificateImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonalIDImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAccepted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major.Name)
        </th>
        <th>
            Accept
        </th>
        <th>
            Reject
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @if (item.Gender == true)
                {
                    <span> Male </span>
                }
                else
                {
                    <span> Female </span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>

                <img class="i" src="../Images/@item.StudentImg" style="width:100px;" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SchoolAvg)
            </td>
            <td>
                <img class="i" src="../Images/@item.CertificateImg" style="width:100px;" />
            </td>
            <td>
                <img class="i" src="../Images/@item.PersonalIDImg" style="width:100px;" />
            </td>
            <td>
                @if (item.IsAccepted == true)
                {
                    <span> Accepted </span>
                }
                else
                {
                    <span> Pending </span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major.Name)
            </td>
            <td>
                @Html.ActionLink("Accept", "Edit", new { id = item.StudentId }, new { @class = "btn btn-success" })


            </td>
            <td>
                @Html.ActionLink("Reject", "Edit", new { id = item.StudentId }, new { @class = "btn btn-danger" })


            </td>
        </tr>
    }

</table>
