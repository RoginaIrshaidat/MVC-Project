@model ERP_Project.Models.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2 style="text-align:center"> Student Request</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StudentId)

        <div class="form-group">
            <h5>@Html.LabelFor(model => model.IdUser, "IdUser", htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.DropDownList("IdUser", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.IdUser, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.IdMajor, "IdMajor", htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.DropDownList("IdMajor", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.IdMajor, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5> @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>@Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownListFor(model => model.Gender, new[] { new SelectListItem { Text = "Male", Value = "true" }, new SelectListItem { Text = "Female", Value = "false" } }, "Select Gender", new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })

                </div>
            </div>
        </div><br />
        <div class="form-group">
            <h5> @Html.LabelFor(model => model.PhoneNum, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNum, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.PhoneNum, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.StudentImg, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                <img style="width:200px; margin-bottom:10px;" src="@Url.Content("~/Images/" + Model.StudentImg)" alt="Image" />
                <br />

            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.SchoolAvg, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SchoolAvg, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.SchoolAvg, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="form-group">
            <h5>@Html.LabelFor(model => model.CertificateImg, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                <img style="width:200px; margin-bottom:10px;" src="@Url.Content("~/Images/" + Model.CertificateImg)" alt="Image" />
                <br />

            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.PersonalIDImg, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                <img style="width:200px; margin-bottom:10px;" src="@Url.Content("~/Images/" + Model.PersonalIDImg)" alt="Image" />
                <br />
            </div>
        </div><br />
        <div class="form-group">
            <h5>  @Html.LabelFor(model => model.IsAccepted, htmlAttributes: new { @class = "control-label col-md-2" })</h5>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownListFor(model => model.IsAccepted, new[] { new SelectListItem { Text = "Accept", Value = "true" }, new SelectListItem { Text = "Reject", Value = "false" } }, "Select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IsAccepted, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger " style="width:305px;" />
            </div>
        </div>
    </div>
    <br />

    <div class="container">
        @Html.ActionLink("Back to List", "Requsts", null, new { @class = "btn btn-primary w-25" })
    </div>

}
