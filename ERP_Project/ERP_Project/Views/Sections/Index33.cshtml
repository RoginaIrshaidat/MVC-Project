@model IEnumerable<ERP_Project.Models.Section>

@{
    Layout = null;
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>CodePen - Project Management Dashboard UI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="~/dist/style.css">



    <!-- theme meta -->
    <meta name="theme-name" content="educenter" />
    <!-- Mobile Specific Metas
      ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Construction Html5 Template">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="author" content="Themefisher">
    <meta name="generator" content="Themefisher Educenter HTML Template v1.0">


</head>
<body>
    <div class="app-container">
        <div class="app-header" style="background-color: #ffbc3b">
            <div class="app-header-left">
                <span class="app-icon"></span>
                <p class="app-name">Alandalus University</p>
            </div>
            <div class="app-header-right">
              
                <button class="profile-btn">
                    @Html.Partial("_LoginPartial")
                </button>
            </div>
            <button class="messages-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
                    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" />
                </svg>
            </button>
        </div>
        <div class="app-content" style="background-color: #1a1a37">
            <div class="app-sidebar" style="background-color: #ffbc3b">

                <a href="@Url.Action("index", "Home")" class="app-sidebar-link active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                        <polyline points="9 22 9 12 15 12 15 22" />
                    </svg>
                </a>
                @if (User.IsInRole("Student"))
                {

                    <a href="@Url.Action("index", "Subjects")" class="app-sidebar-link">
                        <svg class="link-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="feather feather-pie-chart" viewBox="0 0 24 24">
                            <path d="M21.21 15.89A10 10 0 118 2.83M22 12A10 10 0 0012 2v10z" />
                        </svg>

                    </a>

                    <a href="@Url.Action("myClasses", "Sections")" class="app-sidebar-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                            <line x1="16" y1="2" x2="16" y2="6" />
                            <line x1="8" y1="2" x2="8" y2="6" />
                            <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                    </a>
                    <a href="@Url.Action("profile", "students")" class="app-sidebar-link">
                        <svg class="link-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="feather feather-user" viewBox="0 0 24 24">
                            <path d="M12 12C9.79086 12 8 10.2091 8 8C8 5.79086 9.79086 4 12 4C14.2091 4 16 5.79086 16 8C16 10.2091 14.2091 12 12 12Z" />
                            <path d="M21 20.9999V19.9999C21 17.7908 19.2091 15.9999 17 15.9999H7C4.79086 15.9999 3 17.7908 3 19.9999V20.9999" />
                        </svg>
                    </a>

                }
            </div>

            <div class="projects-section">


                <table class="table table-striped table-hover">
                    <tr>
                        <th>
                            Section Number
                      </th>
                        <th>
                           Days
                        </th>
                        <th>
                           StartTime
                        </th>
                        <th>
                           EndTime
                        </th>
                        <th>
                          Section Status
                        </th>
                        <th>
                          Instructor
                        </th>
                        <th>
                            Location
                        </th>
                       
                        <th >Add</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Days)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td>
                                @if (item.ClassStatus == null)
                                {
                                    <p class="btn btn-default">Open</p>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.ClassStatus)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Instructor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                           
                            <td>
                                
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.registerclasses })*@
                                    @*@Html.ActionLink("Details", "Details", new { id = item.registerclasses })*@

                               
                                @Html.ActionLink("Add Section", "Add", "Sections", new { id = item.ClassID, @class = "link-success" }, "")

                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
</body>
<script src="~/dist/script.js"></script>

</html>


